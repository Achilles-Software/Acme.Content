@using Achilles.Acme.Content.Models
@using Achilles.Acme.Content.ViewModels
@model IContentViewModel
<div id="content-seo">
    <fieldset class=" collapsible">
        <legend class="collapse-processed"><a href="#">SEO Settings</a></legend>
        <div class="fieldset-wrapper">
            <div id="SeoFriendlyUrl" class="form-item">
                @Html.CheckBox( "SEOFriendlyUrl" )
                <label class="inline" for="SeoFriendlyTitle">Override SEO Url?</label>                            
                <label for="seo-friendly-url">
                    @Html.CheckBox( "Seo Friendly Url" )
                    <input id="edit-pathauto-perform-alias" class="form-checkbox" type="checkbox" checked="checked"
                        value="1" name="pathauto_perform_alias" />
                    Automatic alias
                </label>
                <div class="description">
                    The SEO friendly Url is automatically generated for you. To create your own URL path,
                    uncheck this option.
                </div>
            </div>
            <div id="edit-path-wrapper" class="form-item">
                <input id="edit-path" class="form-text" type="text" value="services" size="60" name="path"
                    maxlength="250" disabled="" />
                <div class="description" style="display: none;">
                    Optionally specify an alternative URL by which this content item can be accessed. For example,
                    type "about" when writing an about page. Use a relative path and don't add a trailing
                    slash or the URL alias won't work.</div>
            </div>
            <div id="SeoMetaDescription" class="form-item">
                <label for="MetaDescription">Meta Description:</label>
                @Html.TextArea( "MetaDescription", Model.SeoDescription, 4, 80, new{ maxlength="250" } )
            </div>
        </div>
    </fieldset>
</div>